{
	"type": "object",
	"$schema": "http://json-schema.org/draft-03/schema",
	"required": true,
	"description": "The SAXS configuration file specifies the parameters of a SAXS sensor calibration. It is written in the JSON format which governs the general syntax.",
	"additionalProperties": false,
	"properties": 
	{
		"Title": 
		{
			"type": "string"
		},

		"Geometry": 
		{
			"type": "object",
			"required": true,
			"properties": 
			{
				"Tilt": 
				{
					"description": "The sensor, usually is not perfectly perpenticular to the ray direction. The tilt angle can be specified by giving the following paramters.",
					"type": "object",
					"required": true,
					"additionalProperties": false,
					"properties": 
					{
						"TiltRotDeg": 
						{
							"description": "This gives the angel of the tilt direction.",
							"type": "number",
							"units": "degree",
							"default": 0,
							"required": true
						},

						"TiltAngleDeg": 
						{
							"description": "This gives the angle between the ray direction and the normal to the sensor plane.",
							"units": "degree",
							"type": "number",
							"default": 0,
							"required": true
						}
					}
				},

				"BeamCenter": 
				{
					"description": "Gives the beam center in pixel coorinates.",
					"type": "array",
					"minItems": 2,
					"maxItems": 2,
					"required": true,
					"units": "Pixel",
					"default": 
					[
						800.00,
						400.00
					],

					"items": 
					{
						"type": "number",
						"required": true
					}
				},

				"DedectorDistanceMM": 
				{
					"description": "Distance between diffraction center and sensor.",
					"type": "number",
					"units": "Millimeters",
					"default": 1000.00,
					"required": true
				},

				"PixelSizeMicroM": 
				{
					"description": "The pixel size on the sensor.",
					"units": "Microns",
					"type": "array",
					"minItems": 1,
					"maxItems": 2,
					"required": true,
					"default": 
					[
						172.0
					],

					"items": 
					{
						"type": "number",
						"units": "Microns",
						"required": true,
						"default": 172.0
					}
				},

				"Imagesize": 
				{
					"description": "Size of sensor image in pixel.",
					"type": "array",
					"minItems": 2,
					"maxItems": 2,
					"units": "Pixel",
					"required": true,
					"default": 
					[
						1043,
						981
					],

					"items": 
					{
						"type": "integer",
						"units": "Pixels",
						"required": true
					}
				}
			}
		},

		"Masks": 
		{
			"type": "array",
			"minItems": 1,
			"required": true,
			"items": 
			{
				"type": "object",
				"properties": 
				{
					"MaskFile": 
					{
						"description": "Path of Maskfile",
						"type": "string",
						"default": "AAA_integ.msk",
						"required": true,
						"appinfo": 
						{
							"editor": "File",
							"display": "MaskFile"
						}
					},

					"Oversampling": 
					{
						"description": "Oversampling factor for radial integration. The higher, the longer the setup but the higher the accuracy. More then 3 is probably overkill. ",
						"type": "number",
						"default": 3,
						"required": true
					},

					"PixelPerRadialElement": 
					{
						"description": "Expresses the width of a radial step in terms of pixels. '1' means :math:`\\delta R\\approx 1` :ref:`PixelSizeMicroM`.",
						"required": true,
						"type": "number",
						"default": 1,
						"units": "Pixel"
					},

					"Name": 
					{
						"description": "Name for mask configuration.",
						"type": "string"
					}
				}
			}
		},

		"Slices": 
		{
			"type": "array",
			"items": 
			{
				"type": "object",
				"properties": 
				{
					"direction": 
					{
						"type": "string",
						"required": true,
						"enum": 
						[
							"x",
							"y"
						]
					},

					"range": 
					{
						"type": "object",
						"required": true,
						"properties": 
						{
							"start": 
							{
								"type": "number",
								"required": true
							},

							"stop": 
							{
								"type": "number",
								"required": true
							}
						}
					}
				}
			}
		},

		"Wavelength": 
		{
			"description": "Refined wavelength.",
			"units": "Angstrom",
			"type": "number",
			"required": true,
			"default": 1.54000
		},

		"PolarizationCorrection": 
		{
			"description": "The scattering direction id dependend on the light polarization. This may be acconted for with the polarization correction.",
			"required": false,
			"type": "object",
			"default": 
			{
				"Fraction": 0.95,
				"Angle": 0
			},

			"minItems": 1,
			"additionalProperties": false,
			"properties": 
			{
				"Fraction": 
				{
					"description": "Fraction of light polarized in the given (:ref:`Angle`) direction.",
					"required": true,
					"type": "number",
					"default": 0.95
				},

				"Angle": 
				{
					"description": "Angle of the polarization plane.",
					"required": true,
					"type": "number",
					"default": 0.0,
					"units": "degree"
				}
			}
		},

		"Directory": 
		{
			"type": "array",
			"items": 
			{
				"type": "string",
				"default": ".",
				"appinfo": 
				{
					"editor": "RemoteDir"
				}
			}
		},
		"Threads":{
		"default":2,
		"type":"integer"
		}
	}
}