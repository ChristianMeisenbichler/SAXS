{
	"type": "object",
	"$schema": "http://json-schema.org/draft-03/schema",
	"required": true,
	"description": "Schema for requests from Saxs Leash to Saxs Server",
	"additionalProperties": false,
	"properties": 
	{
		"command": 
		{
			"required": true,
			"type": "string",
			"enum": 
			[
				"close",
				"abort",
				"new",
				"get",
				"plot",
				"plotdata",
				"readdir",
				"stat",
				"listdir",
				"putplotdata",
				"fileslist",
				"mergedata"
			]
		},

		"argument": 
		{
			"type": "object",
			"additionalProperties": false,
			"required": false,
			"properties": 
			{
				"calibration": 
				{
					"description": "Calibrarion data according to :ref:`calib`",
					"type": "object",
					"properties": 
					{
						"/": 
						{
							"$ref": "schema.json#"
						}
					}
				},

				"mergeconf": 
				{
					"description": "Datamerger Configuratioin",
					"type": "object",
					"properties": 
					{
						"/": 
						{
							"$ref": "DataConsolidationConf.json#"
						}
					}
				},

				"data": 
				{
					
				},

				"directory": 
				{
					
				}
			}
		},

		"sign": 
		{
			"type": "string",
			"description": "Signature of request"
		},

		"time": 
		{
			"description": "time in seconds (pythons time.time())",
			"type": "number"
		}
	}
}